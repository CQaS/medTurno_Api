@model medTurno_Api.Models.LoginView

@{
    ViewData["Title"] = "Recuperar Password";
}

<link rel="stylesheet" href="~/css/recupera.css" />

<div class="row recupera">
    <img src="../img/clinic.jpg">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8 login-box">
        <div class="col-lg-12 login-title">
            PANEL DE RECUPERACION
        </div>

        <div class="col-lg-12 login-form">
            <div class="col-lg-12 login-form">
                <form asp-controller="Usuario" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="form-control-label">USUARIO</label>
                        <input asp-for="Usuario" class="form-control" placeholder="Ingresa tu E-mail">
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">PREGUNTA</label>
                        <input asp-for="Pregunta" class="form-control" >
                        <span asp-validation-for="Pregunta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-control-label">PASSWORD</label>
                        <input asp-for="Password" class="form-control" >
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-lg-12 loginbttm">
                        <div class="col-lg-6 login-btm login-button">
                            <button type="submit" class="btn btn-outline-primary">Recuperar</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary" style="transform: translateX(270px);">Volver</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-3 col-md-2"></div>
    </div>
